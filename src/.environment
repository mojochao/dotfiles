# -*- mode: sh -*-
export PATH=$HOME/bin:/usr/local/bin:$PATH
export MANPATH=$MANPATH:$HOME/share/man
export TERM=xterm-256color
export EDITOR=vim
export VISUAL=$EDITOR
export LC_ALL=en_US.UTF-8
export LANG=en_US.UTF-8

export SDK_DIR=$HOME/sdk

if [[ "$OSTYPE" == darwin* ]]; then
    EMACS_APP_BIN=/Applications/Emacs.app/Contents/MacOS/bin
    export PATH=$EMACS_APP_BIN:$PATH
    export ICLOUD_DIR=~/Library/Mobile\ Documents/com~apple~CloudDocs
fi

if [[ -x /usr/libexec/java_home ]]; then
    export JAVA_HOME=`/usr/libexec/java_home`
fi

export NVM_DIR="$HOME/.nvm"
[ -s "$NVM_DIR/nvm.sh" ] && . "$NVM_DIR/nvm.sh"  # This loads nvm

if [[ -f /usr/local/bin/virtualenvwrapper.sh ]]; then
    source /usr/local/bin/virtualenvwrapper.sh
fi

if [[ -f ~/.private ]]; then
    source ~/.private
fi

if [[ -s ~/.android-dev ]]; then
    source ~/.android-dev
fi

# for haskell stack usage
export PATH=$PATH:~/.local/bin

# for Go development
export PATH=$PATH:/usr/local/opt/go/libexec/bin

# PostgreSQL server
export PGDATA=/usr/local/var/postgres
